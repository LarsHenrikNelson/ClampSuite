import sys

from PyQt5.QtWidgets import (
    QComboBox,
    QFileDialog,
    QMainWindow,
    QFormLayout,
    QToolBar,
    QSpinBox,
    QStackedWidget,
    QAction,
    QApplication,
    QWidget,
    QMainWindow,
    QHBoxLayout,
    QFormLayout,
    QTabWidget,
)


class MainWindow(QMainWindow):
    def __init__(self):
        super().__init__()
        self.layout = QHBoxLayout()
        self.tab_widget = QTabWidget()
        self.widget = QWidget()
        self.tab_widget.addTab(self.widget, "Tab1")
        self.widget.setLayout(self.layout)

        self.form_layout = QFormLayout()
        self.layout.addLayout(self.form_layout)
        self.spin = QSpinBox()
        self.form_layout.addRow(self.spin)
        self.setCentralWidget(self.tab_widget)
        # self.layout.addRow(self.spin)


app = QApplication([])
window = MainWindow()
window.show()
sys.exit(app.exec())
